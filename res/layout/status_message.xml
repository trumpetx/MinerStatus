<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:padding="10px"
    android:background="@drawable/widget_border">
    >
	  <TextView
			android:id="@+id/pool"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:textColor="@android:color/black"
			android:textSize="10dip"
			android:textStyle="bold" 
			android:text="Loading..." />        
	   <TextView
			android:id="@+id/col1label"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:textColor="@android:color/black"
			android:textSize="9dip"
			android:textStyle="bold"
			android:layout_below="@id/pool" />    
		
	<TextView
			android:id="@+id/col1"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:textColor="@android:color/black"
			android:textSize="9dip"
			android:textStyle="normal"
			android:layout_below="@id/col1label"
			android:layout_alignRight="@id/pool"/>     
		
	<TextView
		android:id="@+id/col2label"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:textColor="@android:color/black"
		android:textSize="9dip"
		android:textStyle="bold" 
		android:layout_below="@id/col1" />     
		
	<TextView
		android:id="@+id/col2"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:textColor="@android:color/black"
		android:textSize="9dip"
		android:textStyle="normal" 
		android:layout_below="@id/col2label" 
		android:layout_alignRight="@id/pool"/>  
	<TextView
		android:id="@+id/updated"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:textColor="@android:color/black"
		android:textSize="9dip"
		android:textStyle="normal" 
		android:layout_alignRight="@id/pool"
		android:layout_below="@id/col2" />  		
</RelativeLayout>